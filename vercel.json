{
  "version": 2,
  "buildCommand": "npm run build",
  "env": {
    "DEPLOYMENT_TIMESTAMP": "@2026-01-28"
  },
  "routes": [
    {
      "src": "^/api(/.*)?$",
      "dest": "/api/handler.js"
    },
    {
      "src": "^/uploads(/.*)?$",
      "dest": "/api/handler.js"
    },
    {
      "src": "^/(.*\\.(js|css|svg|png|jpg|jpeg|gif|ico|woff|woff2))$",
      "dest": "/dist/$1"
    },
    {
      "src": "^/(.*)$",
      "dest": "/dist/index.html"
    }
  ]
}
